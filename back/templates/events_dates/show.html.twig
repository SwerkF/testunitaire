{% extends 'base.html.twig' %}

{% block title %}EventsDates{% endblock %}

{% block body %}
    <h1>EventsDates</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ events_date.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ events_date.date ? events_date.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Tickets</th>
                <td>{{ events_date.tickets }}</td>
            </tr>
            <tr>
                <th>Is_cancelled</th>
                <td>{{ events_date.isCancelled ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Cancellation_reason</th>
                <td>{{ events_date.cancellationReason }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_events_dates_index') }}">back to list</a>

    <a href="{{ path('app_events_dates_edit', {'id': events_date.id}) }}">edit</a>

